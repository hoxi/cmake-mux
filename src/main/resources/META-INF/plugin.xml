<idea-plugin>
    <id>net.tagpad.cmakemux</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>CMake-Mux</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.yourcompany.com">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Enter short description for your plugin here.<br>
        <em>most HTML tags may be used</em>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.clion</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool window registration -->
        <toolWindow id="CMake Mux"
                    anchor="left"
                    secondary="true"
                    factoryClass="net.tagpad.cmakemux.CMakeMuxToolWindowFactory"
                    icon="/iconMonoSimple.svg"/>
        <projectService serviceImplementation="net.tagpad.cmakemux.CMakeMuxState"/>
    </extensions>

    <actions>
        <action id="net.tagpad.cmakemux.AddToCMakeMuxAction"
                class="net.tagpad.cmakemux.AddToCMakeMuxAction"
                text="Add to CMake Mux"
                description="Add this CMakeLists.txt to the CMake Mux list">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>