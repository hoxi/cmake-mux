<idea-plugin>
    <id>net.tagpad.cmakemux</id>
    <name>CMake Mux</name>
    <vendor url="https://www.tagpad.net">Magnus WÃ¥llberg</vendor>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.clion</depends>
    <depends>com.intellij.modules.clion.cmake</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="CMake Mux"
                    anchor="left"
                    secondary="true"
                    factoryClass="net.tagpad.cmakemux.CMakeMuxToolWindowFactory"
                    icon="/iconMonoSimple.svg"/>
        <projectService serviceImplementation="net.tagpad.cmakemux.CMakeMuxState"/>
        <postStartupActivity implementation="net.tagpad.cmakemux.CMakeMuxStartupActivity"/>
    </extensions>

    <actions>
        <action id="net.tagpad.cmakemux.AddToCMakeMuxAction"
                class="net.tagpad.cmakemux.AddToCMakeMuxAction"
                text="Pin to CMake Mux"
                icon="AllIcons.Actions.AddMulticaret"
                description="Pin this CMakeLists.txt to the CMake Mux list">
            <add-to-group group-id="CMake.ProjectViewMenu" anchor="after" relative-to-action="CMake.GeneralFileActionsGroup"/>
        </action>
        <action id="net.tagpad.cmakemux.CMakeMuxPopupAction"
                class="net.tagpad.cmakemux.CMakeMuxPopupAction"
                text="Select CMake Mux Project..."
                description="Show a popup to load one of the top 9 CMake Mux projects"/>
    </actions>
</idea-plugin>